<UserControl x:Class="MovieApp.WPF.Controls.ActorsSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieApp.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="250">
    <Border BorderBrush="{StaticResource BrushPrimary2}" BorderThickness="5" CornerRadius="5">
        <StackPanel Orientation="Vertical"  Background="{StaticResource BrushPrimary1}">
            <TextBlock Text="Actors:" FontSize="24"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
            <local:ActorsListing Grid.Row="1" DataContext="{Binding ActorsListingViewModel}" />
        </StackPanel>
    </Border>
</UserControl>
